{
  "manifest_version": 3,
  "name": "PHP Debugger Forensics",
  "description": "Dual-mode PHP backend forensics: DevTools panel + user-friendly bug reporter for HTTP/Network issues.",
  "version": "0.1.0",
  "author": "Developer",
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "permissions": [
    "storage",
    "tabs",
    "webRequest",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "dist/background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "dist/popup.html",
    "default_title": "PHP Debugger Forensics",
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  "devtools_page": "dist/devtools.html",
  "web_accessible_resources": [
    {
      "resources": [
        "dist/*"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}